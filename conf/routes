# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET    /explore                     controllers.HomeController.explore
GET    /tutorial                    controllers.HomeController.tutorial
GET    /about                    controllers.HomeController.about
GET    /welcome/:name/:lastName                    controllers.HomeController.welcome(name: String, lastName: String)

GET /books controllers.BookstoreController.list()
GET /books/create controllers.BookstoreController.create()
GET /books/:id controllers.BookstoreController.show(id : Integer)
GET /books/edit/:id controllers.BookstoreController.edit(id : Integer)
GET /books/edit controllers.BookstoreController.update()
GET /books/create controllers.BookstoreController.save()
GET /books/delete/:id controllers.BookstoreController.destroy(id : Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
